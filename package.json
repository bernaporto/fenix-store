{
  "name": "fenix-store",
  "version": "1.0.0",
  "description": "A simple and powerful state management library for JavaScript applications",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE.md"
  ],
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vitest --coverage",
    "test": "vitest run",
    "lint": "eslint ./src",
    "format": "prettier ./src --write",
    "prebuild": "tsc",
    "build": "vite build",
    "build:dev": "pnpm --ignore-scripts vite build --mode development",
    "build:analyze": "vite build --config vite.config.analyze.js",
    "bundle:report": "node scripts/bundle-report.js",
    "bundle:analyze": "pnpm build:analyze && pnpm bundle:report",
    "size:check": "size-limit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@vitest/coverage-v8": "^2.0.2",
    "eslint": "^9.2.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.0.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "gzip-size": "^7.0.0",
    "rimraf": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "pnpm lint",
      "pnpm format"
    ]
  }
}
